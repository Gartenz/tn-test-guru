<h1>Create test question!</h1>

<form accept-charset="UTF-8" action="/tests/<%= params[:test_id] %>/questions" data-remote="true" method="post">
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
  <p>
    <label for="question-body"> Question:</label>
    <input type="text" name="question[body]" id="question-body">
  </p>
  <p>
    <input type="submit" value="Create">
  </p>
</form>
