<h1>Create test question!</h1>

<form accept-charset="UTF-8" action="<%= test_questions_url %>" data-remote="true" method="post">
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
  <input type="hidden" name="question[test_id]" value="<%= params[:test_id] %>">
  <p>
    <label for="question-body"> Question:</label>
    <input type="text" name="question[body]" id="question-body">
  </p>
  <p>
    <input type="submit" value="Create">
  </p>
</form>
