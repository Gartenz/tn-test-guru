<tr>
  <td> <%= question.body %> </td>
  <td>
    <%= link_to "Show", admin_question_path(question), class: "btn btn-primary" %>
    <%= link_to "Edit", edit_admin_question_path(question), class: "btn btn-primary" %>
    <%= link_to 'Delete', admin_question_path(question),
                          method: :delete,
                          data: { confirm: 'Are you sure?' },
                          class: "btn btn-danger" %>
  </td>
</tr>
