<tr>
  <td> <%= test.title %> </td>
  <td> <%= test.level %> </td>
  <% if test.category.present? %>
    <td> <%= test.category.title %> </td>
  <% end %>
  <td>
    <%= link_to t('admin.show'), admin_test_path(test), class: "btn btn-primary" %>
    <%= link_to t('admin.edit'), edit_admin_test_path(test), class: "btn btn-primary" %>
    <%= link_to t('admin.delete'), admin_test_path(test),
                                   method: :delete,
                                   data: { confirm: t('delete_confirm') },
                                   class: "btn btn-danger" %>
  </td>
</tr>
