<%= render 'shared/errors', resource: @test %>
<%= form_with model: [:admin, @test], local: true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :level %>
    <%= f.text_field :level, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :category_id %>
    <%= f.collection_select :category_id, Category.all, :id, :title, { prompt: true }, { class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= f.label :test_minutes %>
    <div class="input-group">
      <%= f.text_field :test_minutes, class: "form-control" %>
      <div class="input-group-append">
        <span class="input-group-text">лю</span>
      </div>
    </div>
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
<%= link_to t('admin.back'), admin_tests_path, class: "btn btn-link" %>
