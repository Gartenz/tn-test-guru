<h1><%= t('.header', title: @test_passage.test.title) %></h1>
<h3><%= t('.question_number', number:@test_passage.question_number, total: @test_passage.test.questions.count) %></h3>
<div class="progress">
  <!-- <div class="progress-bar" role="progressbar" aria-valuenow="2" aria-valuemin="0" aria-valuemax="3"></div> -->
  <%= content_tag :div, nil, class: 'progress-bar',
                             role: 'progressbar',
                             aria_valuenow: "#{@test_passage.question_number}",
                             aria_valuemin: "0",
                             aria_valuemax: "#{@test_passage.test.questions.count}",
                             data: {max_value: @test_passage.test.questions.count,
                                    current_value: @test_passage.question_number } %>
</div>
<b>
  <%= @test_passage.current_question.body %>
</b>

<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :body, include_hidden: false do |b| %>
    <p>
      <%= b.check_box id: "answer_ids_#{b.object.id}" %>
      <%= b.label %>
    </p>
  <% end %>
  <%= link_to 'Gist Question', gist_test_passage_path(@test_passage), method: :post, class: "btn btn-warning" %>
  <p><%= form.submit t('.next') %></p>
<% end %>
